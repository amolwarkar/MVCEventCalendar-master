
@model MVCEventCalendar.ClassRoomDetail

<div style="background-image:url(../../Content/Images/2.jpg);background-size:cover">

        <body>
            @using (Html.BeginForm("AddClassroomDetails", "ClassroomDetails", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div >
                    <div class="form-horizontal" style=" width:800px; align-content:center; margin-right:50px; color:black;border:1px solid black; width:600px;background-color:white;padding-top:30px;opacity:0.9;margin-left:400px">
                        <h3 style="padding-left:140px">Add Classroom Details</h3>
                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("Classroom Name", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-4">
                                @*@Html.DropDownList("AllClassroomId", "Select")*@
                                @Html.DropDownList("AllClassroomId", (IEnumerable<SelectListItem>)ViewBag.AllClassroomId, "---Select---", new { @class = "form-control", @style = "width:300px;", required = "required" })
                                @Html.ValidationMessageFor(model => model.ClassroomId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Resource Name", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-4">
                                @*@Html.DropDownList("AllResourceId", "Select")*@
                                @Html.DropDownList("AllResourceId", (IEnumerable<SelectListItem>)ViewBag.AllResourceId, "---Select---", new { @class = "form-control", @style = "width:300px;", required = "required" })
                                @Html.ValidationMessageFor(model => model.ResourceId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Resource Quantity", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-4">
                                @*@Html.EditorFor(model => model.ResourceQuantity, new { htmlAttributes = new { @class = "form-control" } })*@
                                <input type="number" name="ResourceQuantity" id="LevelNo" min="1" max="50" class="form-control" required />
                                @Html.ValidationMessageFor(model => model.ResourceQuantity, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-4">
                                <input type="submit" value="Add Details" class="btn btn-warning" />
                                @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            }

        </body>
      
    </div>
