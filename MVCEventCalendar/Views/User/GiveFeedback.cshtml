@model MVCEventCalendar.Feedback

@{
    ViewBag.Title = "GiveFeedback";
}

<div style="background-image:url(../../Content/Images/2.jpg);background-size:cover">
    <div style="border:1px solid black; width:600px;background-color:white;padding-top:30px;opacity:0.9;margin-left:400px">
        @using (Html.BeginForm("GiveFeedback", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <center>
                    <h4>Give Feedback</h4>
                </center>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @Html.Label("Feedback :", htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(model => model.Feedback1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Feedback1, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-5 col-md-10">
                        <input type="submit" value="Submit Feedback" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

        </div>
    </div>
